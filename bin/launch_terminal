#!/usr/bin/bash

launch()
{

cd $1


if [[ "$XDG_CURRENT_DESKTOP" == "KDE" ]]; then

/usr/bin/konsole -- bash -c "exec bash"

elif [[ "$XDG_CURRENT_DESKTOP" == "XFCE" ]]; then

/usr/bin/xfce4-terminal -- bash -c "exec bash"

elif [[ "$XDG_CURRENT_DESKTOP" == *"$LXQt"* ]]; then

/usr/bin/qterminal -- bash -c "exec bash"

else

/usr/bin/gnome-terminal -- bash -c "exec bash"

fi


}


launch $1


